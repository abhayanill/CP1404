BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Unvisited List'
                on_press: app.required_mark()
            Button:
                text: 'Visited List'
                on_press: app.completed()
            Label:
                text: 'Add New Place'
            Label:
                text: 'Place:'
            TextInput:
                id: input_place
                text: ''
            Label:
                text: 'Country:'
            TextInput:
                id: input_country
                text: ''
            Label:
                text: 'Priority:'
            TextInput:
                id: input_priority
                text: ''
            Button:
                text: 'Add Place'
                on_press: app.handle_add()
            Button:
                text: 'Clear'
                on_press: app.handle_clear()
            Button:
                text: 'Save Place'
                on_press:app.save_place()
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: top_label
                size_hint_y: 0.1
            GridLayout:
                id: entriesBox
                cols: 1
                orientation: 'vertical'
    Label:
        id: status_label
        size_hint_y: 0.1